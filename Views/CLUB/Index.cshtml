@model IEnumerable<TFG_FUTBOL.DataModels.CLUB>
@{
    ViewData["Title"] = "Index";
}
@section MyCss
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.21/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/datatables.min.css" />

}
<h1>Listado de Clubs</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Crear nuevo registro</a>
</p>
<div class="container">
    <table id="TblDatos" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">Editar</a> 
                        
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ID">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section scripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.21/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/datatables.min.js"></script>
    <script>
        $('#TblDatos').dataTable({
            "language": {
                "url": "/lib/datatables-spanish/Spanish.json"
            },
            "processing": true,
        }); 
    </script>
}