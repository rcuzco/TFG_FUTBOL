@model TFG_FUTBOL.Models.JugadoresOjeadosViewModel

@{
    ViewData["Title"] = "DetallesRegistro";
}



<div>
    <div class="row mb-2">
        <div class="col-md-12">
            <div class="card border-primary mb-3">
                <div class="card-header">INFO JUGADOR</div>
                <div class="card-body text-primary">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Datos Principales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Temporadas</a>
                        </li>
                    </ul>
                    <div class="tab-content tab-border p-3" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h5 class="card-title">
                                @Model.NombresCompletos
                            </h5>
                            <div class="card border-light flex-md-row mb-4 shadow-sm h-md-250">
                                <img class="card-img-right flex-auto d-none d-lg-block" data-src="~/img/ojeados/jugadores/@Model.Foto" src="~/img/ojeados/jugadores/@Model.Foto" alt="@Model.NombresCompletos" style="width:128px;">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-primary">@Model.Posicion</strong>
                                    <h3 class="mb-0">
                                        <a class="text-dark" href="#">Valor de mercado: @string.Format("{0:C}", Model.ValorDeMercado)</a>
                                    </h3>
                                    <div class="mb-1 text-muted">Nacido en el año @Model.AnhoNacimiento</div>
                                </div>
                            </div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Nombres)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Nombres)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PrimerApellido)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PrimerApellido)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.SegundoApellido)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.SegundoApellido)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Telefono1)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Telefono1)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Telefono2)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Telefono2)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Correo)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Correo)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.AnhoNacimiento)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.AnhoNacimiento)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Valoracion)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Valoracion)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IdClub)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IdClub)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Posicion)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Posicion)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PiernaDominante)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PiernaDominante)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Goles)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Goles)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Club)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Club)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ValorDeMercado)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ValorDeMercado)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.VencimientoContrato)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.VencimientoContrato)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PartidosJugados)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PartidosJugados)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PaisNacimiento)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PaisNacimiento)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Pasaporte)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Pasaporte)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Altura)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Altura)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Peso)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Peso)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.EnPrestamo)
                                </dt>

                                @if (Model.EnPrestamo.HasValue && Model.EnPrestamo.Value)
                                {
                                    <dd class="col-sm-10">Sí</dd>
                                }
                                else
                                {
                                    <dd class="col-sm-10">No</dd>
                                }
                            </dl>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div id="DivListaTemporadas" class="container-fluid" style="overflow-x:auto;">
                                <button id="BTnNuevaTemporada" onclick="nuevaTemporada('@Model.DNI')" class="btn btn-outline-primary">Crear nuevo registro de temporada</button>
                                <table id="TblDatos" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Temporada</th>
                                            <th>Club</th>
                                            <th>Competición</th>
                                            <th class=" text-center">Partidos como titular</th>
                                            <th class=" text-center">Partidos como suplente</th>
                                            <th class=" text-center">Partidos convocado</th>
                                            <th class=" text-center">Minutos jugados</th>
                                            <th class=" text-center">Goles</th>
                                            <th class=" text-center">Amarillas</th>
                                            <th class=" text-center">Rojas</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Temporadas != null && Model.Temporadas.Any())
                                        {
                                            @foreach (var item in Model.Temporadas)
                                            {
                                                <tr>
                                                    <td class="align-middle text-center">
                                                        <a class="cursor-pointer" onclick="editarDetallesTemporada('@item.DNI','@item.Temporada')" title="Editar registro">
                                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                        </a> |
                                                        <a class="cursor-pointer" onclick="verDetallesTemporada('@item.DNI','@item.Temporada')" title="Ver detalles">
                                                            <i class="fa fa-info" aria-hidden="true"></i>
                                                        </a> |
                                                        <a class="cursor-pointer" title="Borrar registro">
                                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                        </a>
                                                    </td>
                                                    <td class="align-middle">
                                                        @Html.DisplayFor(modelItem => item.Temporada)
                                                    </td>
                                                    <td class="align-middle">
                                                        @Html.DisplayFor(modelItem => item.Club)
                                                    </td>
                                                    <td class="align-middle">
                                                        @Html.DisplayFor(modelItem => item.Competicion)
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        @Html.DisplayFor(modelItem => item.PartidosTitular)
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        @Html.DisplayFor(modelItem => item.PartidosSuplente)
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        @Html.DisplayFor(modelItem => item.PartidosConvocado)
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        @Html.DisplayFor(modelItem => item.MinutosJugados)
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        @Html.DisplayFor(modelItem => item.Goles)
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        @Html.DisplayFor(modelItem => item.TarjetasAmarillas)
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        @Html.DisplayFor(modelItem => item.TarjetasRojas)
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="11">
                                                    <div class="alert alert-dark" role="alert">
                                                        No hay datos de temporadas. Presione el botón nuevo para crear una entrada de temporada.
                                                        <button id="BTnNuevaTemporada" onclick="nuevaTemporada('@Model.DNI')" class="btn btn-outline-primary">Crear nuevo registro de temporada</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <div id="DivDetalleTemporada" style="display:none;"></div>
                            <div id="DivEditarTemporada" style="display:none;"></div>
                            <div id="DivNuevaTemporada" style="display:none;"></div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-right">
                    <a asp-action="EditarRegistro" asp-route-id="@Model.DNI" class="btn btn-outline-primary">Editar</a> |
                    <a asp-action="BusquedaAvanzada" class="btn btn-outline-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.21/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/fixedheader/3.1.7/js/dataTables.fixedHeader.min.js"></script>
    <script>
        var table = $('#TblDatos').dataTable({
            rderCellsTop: true,
            fixedHeader: true,
            responsive: true,
            "language": {
                "url": "/lib/datatables-spanish/Spanish.json"
            },
            "processing": true,
        }).DataTable();

        $('#TblDatos thead tr').clone(true).appendTo('#TblDatos thead');
        $('#TblDatos thead tr:eq(1) th').each(function (i)
        {
            $(this).html('<input type="text" placeholder="Buscar" />');

            $('input', this).on('keyup change', function ()
            {
                //console.log("table", table);
                if (table.column(i).search() !== this.value)
                {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });
        
    </script>
    <script>
        function verDetallesTemporada(dni, temporada)
        {
            $("#DivDetalleTemporada").load("/OJEADOS/ObtenerTemporadaJugador/" + dni + "/" + encodeURIComponent(temporada));
            $("#DivDetalleTemporada").show("slow");
            $("#DivListaTemporadas").hide("slow");
        }

        function editarDetallesTemporada(dni, temporada)
        {
            $("#DivEditarTemporada").load("/OJEADOS/EditarTemporadaJugador/" + dni + "/" + encodeURIComponent(temporada));
            $("#DivEditarTemporada").show("slow");
            $("#DivListaTemporadas").hide("slow");            
        }

        function nuevaTemporada(dni)
        {
            console.log(dni);
            $("#DivNuevaTemporada").load("/OJEADOS/CrearTemporadaJugador/" + dni);
            $("#DivNuevaTemporada").show("slow");
            $("#DivListaTemporadas").hide("slow");            
        }
    </script>
    <script>
        $(document).ready(function ()
        {
            
            if (window.location.href.endsWith("cargartab"))
            {
                $('#myTab a[href="#profile"]').tab('show');
            }
        });
    </script>
}

