@model IEnumerable<TFG_FUTBOL.Models.JugadoresOjeadosViewModel>

@{
    ViewData["Title"] = "BusquedaAvanzada";
}
@section MyCss
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.21/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/datatables.min.css" />
    <style>
        thead input
        {
            width: 100%;
        }
    </style>

}
<h1>Búsqueda Avanzada de Jugadores</h1>

<p>
    <a asp-action="CrearRegistro" class="btn btn-outline-primary">Agregar nuevo jugador</a>
</p>
<div class="container-fluid" style="overflow-x:auto;">
    <table id="TblDatos" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>
                    Jugador
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnhoNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valoracion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdClub)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Posicion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PiernaDominante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Goles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Club)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorDeMercado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VencimientoContrato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PartidosJugados)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaisNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pasaporte)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Altura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Peso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnPrestamo)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <a asp-action="EditarRegistro" asp-route-id="@item.DNI" title="Editar registro">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a> |
                        <a asp-action="DetallesRegistro" asp-route-id="@item.DNI" title="Ver detalles">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </a> |
                        <a asp-action="EliminarRegistro" asp-route-id="@item.DNI" title="Borrar registro">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </td>
                    <td class="text-center align-middle">
                        <img src="~/img/ojeados/jugadores/@item.Foto" style="width:48px;" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Nombres)
                        @Html.DisplayFor(modelItem => item.PrimerApellido)
                        @Html.DisplayFor(modelItem => item.SegundoApellido)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Telefono1)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Telefono2)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.AnhoNacimiento)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Valoracion)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.IdClub)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Posicion)
                    </td>
                    <td class="align-middle">
                        @if (item.PiernaDominante.Trim() == "I")
                        {
                            <span>Izquierda</span>
                        }
                        else
                        {
                            <span>Derecha</span>
                        }
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Goles)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Club)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ValorDeMercado)
                    </td>
                    <td class="align-middle">
                        @if (item.VencimientoContrato.HasValue)
                        {
                            <span>@item.VencimientoContrato.Value.ToShortDateString()</span>
                        }
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.PartidosJugados)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.PaisNacimiento)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Pasaporte)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Altura) cms
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Peso) Kgs
                    </td>
                    <td class="align-middle">
                        @if (item.EnPrestamo.HasValue && item.EnPrestamo.Value)
                        {
                            <span>Sí</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.21/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/datatables.min.js"></script>    
    <script type="text/javascript" src="https://cdn.datatables.net/fixedheader/3.1.7/js/dataTables.fixedHeader.min.js"></script>
    <script>
        var table = $('#TblDatos').dataTable({
            rderCellsTop: true,
            fixedHeader: true,
            responsive: true,
            "language": {
                "url": "/lib/datatables-spanish/Spanish.json"
            },
            "processing": true,
        }).DataTable();

        $('#TblDatos thead tr').clone(true).appendTo('#TblDatos thead');
        $('#TblDatos thead tr:eq(1) th').each(function (i) {            
            $(this).html('<input type="text" placeholder="Buscar" />');

            $('input', this).on('keyup change', function () {
                console.log("table", table);
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });
       
    </script>
}