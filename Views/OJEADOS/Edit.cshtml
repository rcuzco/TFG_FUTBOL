    </div>    
</div>
    
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DNI" />
            <div class="form-group row">
                <label asp-for="Nombres" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Nombres" class="form-control" />
                </div>
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="PrimerApellido" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PrimerApellido" class="form-control" />
                </div>
                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="SegundoApellido" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="SegundoApellido" class="form-control" />
                </div>
                <span asp-validation-for="SegundoApellido" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Telefono1" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Telefono1" class="form-control" />
                </div>
                <span asp-validation-for="Telefono1" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Telefono2" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Telefono2" class="form-control" />
                </div>
                <span asp-validation-for="Telefono2" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Correo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Correo" class="form-control" />
                </div>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="AnhoNacimiento" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="AnhoNacimiento" class="form-control" />
                </div>
                <span asp-validation-for="AnhoNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Valoracion" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Valoracion" class="form-control" />
                </div>
                <span asp-validation-for="Valoracion" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="IdClub" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="IdClub" class="form-control" />
                </div>
                <span asp-validation-for="IdClub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
